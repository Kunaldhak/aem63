<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="All Granite Field"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs1
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <fixed_columns
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Basic Tab 1"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                        margin="{Boolean}false">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <alert
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/alert"
                                        fieldLabel="Alert : "
                                        text="Here is Alert"/>
                                    <selectField
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        fieldLabel="List Items"
                                        name="./listItems">
                                        <items jcr:primaryType="nt:unstructured">
                                            <list1
                                                jcr:primaryType="nt:unstructured"
                                                text="Male"
                                                value="male"/>
                                            <list2
                                                jcr:primaryType="nt:unstructured"
                                                text="Female"
                                                value="female"/>
                                        </items>
                                    </selectField>
                                    <textArea
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/textarea"
                                        fieldLabel="TextArea Field : "
                                        name="./textArea"/>
                                </items>
                            </column>
                        </items>
                    </fixed_columns>
                    <fixed_columns2
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Basic Tab 2"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                        margin="{Boolean}false">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <TextField
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/textfield"
                                        fieldLabel="Text Field "
                                        name="./textfield"/>
                                    <checkBox
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                        defaultChecked="{Boolean}true"
                                        name="./checkValue"
                                        text="Click Check Box"
                                        value="{Boolean}true"/>
                                    <datePicker
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/datepicker"
                                        displayedFormat="DD-MM-YYYY HH:mm"
                                        fieldLabel="Datepicker : "
                                        name="./datePicker"/>
                                    <userPicker
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/userpicker"
                                        fieldLabel="User Picker "
                                        hideServiceUsers="{Boolean}true"
                                        impersonatesOnly="{Boolean}false"
                                        name="./userpicker"/>
                                    <radioGroup
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/radiogroup"
                                        fieldLabel="Radio Group"
                                        name="./radio"
                                        vertical="{Boolean}true">
                                        <items jcr:primaryType="nt:unstructured">
                                            <op1
                                                jcr:primaryType="nt:unstructured"
                                                text="radio one"
                                                value="radio1"/>
                                            <op2
                                                jcr:primaryType="nt:unstructured"
                                                text="radio two"
                                                value="radio2"/>
                                        </items>
                                    </radioGroup>
                                </items>
                            </column>
                        </items>
                    </fixed_columns2>
                    <fixed_columns3
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Dynamic Tab"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                        margin="{Boolean}false">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <background-style
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/select"
                                        class="cq-dialog-dropdown-showhide"
                                        cq-dialog-dropdown-showhide-target=".text-image-hide-show"
                                        fieldLabel="Background Style"
                                        name="./bg-style">
                                        <items jcr:primaryType="nt:unstructured">
                                            <image
                                                jcr:primaryType="nt:unstructured"
                                                text="Background Image"
                                                value="image"/>
                                            <color
                                                jcr:primaryType="nt:unstructured"
                                                text="Background Color"
                                                value="color"/>
                                        </items>
                                    </background-style>
                                    <bg-image
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/container"
                                        class="hide text-image-hide-show"
                                        showhidetargetvalue="image">
                                        <items jcr:primaryType="nt:unstructured">
                                            <heading
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/heading"
                                                class="coral-Heading coral-Heading--4"
                                                level="{Long}4"
                                                text="Background Image"/>
                                            <well
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/container">
                                                <layout
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/layouts/well"/>
                                                <items jcr:primaryType="nt:unstructured">
                                                    <background-image
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                                        showhidetargetvalue="image"/>
                                                </items>
                                            </well>
                                        </items>
                                    </bg-image>
                                    <bg-color
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/container"
                                        class="hide text-image-hide-show"
                                        showhidetargetvalue="color">
                                        <items jcr:primaryType="nt:unstructured">
                                            <heading
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/heading"
                                                class="coral-Heading coral-Heading--4"
                                                level="{Long}4"
                                                text="Background Color"/>
                                            <well
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/container">
                                                <layout
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/layouts/well"/>
                                                <items jcr:primaryType="nt:unstructured">
                                                    <background-color
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/foundation/form/select"
                                                        name="./backgroundColor"
                                                        showhidetargetvalue="color">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <white
                                                                jcr:primaryType="nt:unstructured"
                                                                text="White"
                                                                value="white"/>
                                                            <pinapple
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Pineapple"
                                                                value="pinapple"/>
                                                            <tangerine
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Tangerine"
                                                                value="tangerine"/>
                                                            <peapod
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Peapod"
                                                                value="peapod"/>
                                                            <neutral
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Neutral"
                                                                value="neutral"/>
                                                            <cream
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Cream"
                                                                value="cream"/>
                                                            <valuered
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Value Red"
                                                                value="valuered"/>
                                                            <grape
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Grape"
                                                                value="grape"/>
                                                        </items>
                                                    </background-color>
                                                </items>
                                            </well>
                                        </items>
                                    </bg-color>
                                </items>
                            </column>
                        </items>
                    </fixed_columns3>
                </items>
            </tabs1>
        </items>
    </content>
</jcr:root>
